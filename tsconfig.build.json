{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/payload.config.ts",
    "src/collections/**/*.ts",
    "src/collections/**/*.tsx",
    "src/blocks/**/config.ts",
    "src/fields/**/*.ts",
    "src/search/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "src/app/**/*",
    "src/components/**/*",
    "src/heros/**/*",
    "src/blocks/**/Component.tsx",
    "src/blocks/**/Component.client.tsx",
    "src/blocks/**/index.tsx",
    "src/utilities/**/*"
  ]
} 